<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AxeDevToolsSampleApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/main_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="android:textSize">@dimen/text_md</item>
        <item name="android:textColor">@color/main_black</item>
    </style>

    <style name="Theme.AxeDevToolsSampleApp.TitleAcronym" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">175sp</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:fontFamily">@font/quattrocento</item>
    </style>

    <style name="Theme.AxeDevToolsSampleApp.SmallTitleAcronym" parent="Theme.AxeDevToolsSampleApp.TitleAcronym">
        <item name="android:textSize">100sp</item>
    </style>

    <style name="Theme.AxeDevToolsSampleApp.LogoText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:fontFamily">@font/cantata_one</item>
    </style>

    <style name="Theme.AxeDevToolsSampleApp.SmallLogoText" parent="Theme.AxeDevToolsSampleApp.LogoText">
        <item name="android:textSize">@dimen/text_md</item>
    </style>

    <style name="Theme.AxeDevToolsSampleApp.Button" parent="@style/Widget.Material3.Button">
        <item name="android:textSize">@dimen/text_lg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">7dp</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="Theme.AxeDevToolsSampleApp.Button.Light" parent="Theme.AxeDevToolsSampleApp.Button">
        <item name="android:textColor">@color/main_black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Theme.AxeDevToolsSampleApp.WhiteOutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="Theme.AxeDevToolsSampleApp.BlackOutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/main_black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="Theme.AxeDevToolsSampleApp.MainHeading" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/quattrocento</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_xlg</item>
    </style>

    <style name="Theme.AxeDevToolsSampleApp.FunHeading" parent="Theme.AxeDevToolsSampleApp.MainHeading">
        <item name="fontFamily">@font/vast_shadow</item>
        <item name="android:textSize">28sp</item>
    </style>
</resources>