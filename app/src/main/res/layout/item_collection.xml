<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/collection_image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/xlg"
        android:contentDescription="@string/collection_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/winter" />

    <TextView
        android:id="@+id/collection_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xxlg"
        android:layout_marginTop="@dimen/xxlg"
        android:fontFamily="@font/quattrocento"
        android:textColor="@color/white"
        android:textSize="@dimen/text_xlg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/collection_image"
        app:layout_constraintBottom_toBottomOf="@id/collection_image"
        tools:text="Winter 2021" />

</androidx.constraintlayout.widget.ConstraintLayout>